var DragonSlayer = DragonSlayer || {};

DragonSlayer.MainMenu = function () {};

DragonSlayer.MainMenu.prototype = {
	create: function () {
		this.background = this.game.add.tileSprite(0, 0, this.game.width, this.game.height, 'Grass');
		// this.background.autoScroll(0, 1000);
		this.ground = this.game.add.tileSprite(0, 0, this.game.width, this.game.height/2.01,'Wall');

		this.player = this.add.sprite(0, this.game.height/1.5, 'Player1');
		this.player.x = this.game.width/2 - this.player.width/4.3;
		this.player.scale.setTo(1);

		
		this.startText = this.game.add.bitmapText(0, 0, 'Ruritania', 'Dragon Slayer', 50);
		this.startText.x = this.game.width/2 - this.startText.textWidth/2;
		
		this.startText1 = this.game.add.bitmapText(0, 0, 'Albion', 'It behoves thou to thine town from an evil dragon and its minions.', 50);
		this.startText1.x = this.game.width/2 - this.startText1.textWidth/2;
		this.startText1.y = 110;

		this.startText2 = this.game.add.bitmapText(0, 0, 'Albion', 'Presseth thine cursor keys to move thine steed round the castle grounds.', 50);
		this.startText2.x = this.game.width/2 - this.startText2.textWidth/2;
		this.startText2.y = 150;

		this.startText3 = this.game.add.bitmapText(0, 0, 'Albion', 'Have at thine foes by holding down thine SPACEBAR.', 50);
		this.startText3.x = this.game.width/2 - this.startText3.textWidth/2;
		this.startText3.y = 190;

		this.startText3 = this.game.add.bitmapText(0, 0, 'Albion', 'Thou canst collect health elixirs, which thou canst consume if thou presseth thine SHIFT KEY.', 50);
		this.startText3.x = this.game.width/2 - this.startText3.textWidth/2;
		this.startText3.y = 230;

		this.startText4 = this.game.add.bitmapText(0, 0, 'Albion', 'Presseth thine ENTER key or clicketh thine mouse to commence thine quest.', 50);
		this.startText4.x = this.game.width/2 - this.startText4.textWidth/2;
		this.startText4.y = 270;

		
		
	},

	update: function () {
		var startKey = this.game.input.keyboard.addKey(Phaser.Keyboard.ENTER);
		startKey.onDown.add(function(startKey) {
    		this.game.state.start('Game');
		}, this);

		if (this.game.input.activePointer.justPressed()) {
			this.game.state.start('Game');
		}
	}
};